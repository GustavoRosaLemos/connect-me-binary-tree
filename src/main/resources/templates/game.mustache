                <a href="/level/{{level}}/width">
                    <button type="button" class="btn btn-success">Busca em largura</button>
                </a>
                <a href="/level/{{level}}/deep">
                    <button type="button" class="btn btn-success">Busca em profundidade</button>
                </a>
            </div>
        {{/canSolve}}
